      justify-content: center;
      gap: 2rem;
      padding: 2rem;
      flex-wrap: wrap;
      background: #fff;
    }

    .payment img {
      height: 40px;
      opacity: 0.8;
      transition: opacity 0.3s;
    }

    .payment img:hover {
      opacity: 1;
    }

    /* Testimonials */
