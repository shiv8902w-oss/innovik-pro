    /* Feature Boxes */
    .box {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      padding: 3rem;
      flex-wrap: wrap;
    }

    .card {
      background: #fff;
      padding: 2rem 1.5rem;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      text-align: center;
      width: 250px;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 18px rgba(0,0,0,0.1);
    }

    .card h3 {
      margin-bottom: 0.6rem;
      font-size: 1.2rem;
    }

