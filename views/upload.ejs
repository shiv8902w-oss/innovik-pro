<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Style Advisor - Vyapar Saathi</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-green: #16a34a;
            --primary-green-dark: #15803d;
            --light-green-bg: #f0fdf4;
            --border-color: #e5e7eb;
            --border-color-light: #f3f4f6;
            --text-dark: #1f2937;
            --text-medium: #4b5563;
            --text-light: #6b7280;
            --bg-color: #f9fafb;
            --card-bg: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-dark);
            padding: 2rem;
        }

        .main-container {
            width: 100%;
            max-width: 900px;
            margin: 0 auto;
        }
        
        /* Header Section */
        .header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .header-icon {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-shrink: 0;
            width: 48px;
            height: 48px;
            background-color: var(--light-green-bg);
            color: var(--primary-green);
            border-radius: 10px;
        }

        .header-icon svg {
            width: 28px;
            height: 28px;
        }

        .header h1 {
            font-size: 2rem;
            font-weight: 700;
        }

        .header p {
            font-size: 1.125rem;
            color: var(--text-medium);
        }

        /* Uploader Section */
        .uploader-card {
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 1.5rem;
        }

        #drop-area {
            border: 2px dashed var(--border-color);
            border-radius: 10px;
            padding: 3rem 2rem;
            text-align: center;
            cursor: pointer;
            transition: background-color 0.2s ease, border-color 0.2s ease;
        }
        
        #drop-area.dragover {
            background-color: var(--light-green-bg);
            border-color: var(--primary-green);
        }

        .upload-icon {
            display: inline-flex;
            justify-content: center;
            align-items: center;
            width: 56px;
            height: 56px;
            background-color: var(--light-green-bg);
            color: var(--primary-green);
            border-radius: 50%;
            margin-bottom: 1rem;
        }
        
        .upload-icon svg {
            width: 28px;
            height: 28px;
        }

        #drop-area p {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--text-dark);
        }

        #drop-area span {
            display: block;
            color: var(--text-medium);
            margin-top: 0.25rem;
        }
        
        #file-name {
            margin-top: 1rem;
            font-weight: 500;
            color: var(--primary-green);
        }

        #file-input {
            display: none;
        }

        /* Analyze Button */
        .analyze-btn {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.75rem;
            width: 100%;
            background-color: var(--primary-green);
            color: white;
            border: none;
            padding: 1rem;
            border-radius: 10px;
            font-size: 1.125rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.2s ease;
            margin-bottom: 3rem;
        }

        .analyze-btn:hover {
            background-color: var(--primary-green-dark);
        }
        
        .analyze-btn:disabled {
            background-color: #a3a3a3;
            cursor: not-allowed;
        }

        /* How it works Section */
        .how-it-works h2 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 2rem;
        }

        .steps-list {
            list-style: none;
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .step-item {
            display: flex;
            align-items: flex-start;
            gap: 1.5rem;
            padding: 1.5rem;
            background-color: var(--card-bg);
            border: 1px solid var(--border-color-light);
            border-radius: 12px;
        }

        .step-number {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-shrink: 0;
            width: 40px;
            height: 40px;
            background-color: var(--light-green-bg);
            color: var(--primary-green);
            border-radius: 50%;
            font-weight: 700;
            font-size: 1.125rem;
        }

        .step-item h3 {
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }
        
        .step-item p {
            color: var(--text-medium);
            line-height: 1.6;
        }

        /* Responsive Design */
        @media (max-width: 640px) {
            body {
                padding: 1rem;
            }
            .header {
                flex-direction: column;
                align-items: flex-start;
                text-align: left;
            }
            .header h1 { font-size: 1.75rem; }
            .header p { font-size: 1rem; }
            .how-it-works h2 { text-align: center; }
        }
    </style>
</head>
<body>

    <div class="main-container">
        <header class="header">
            <div class="header-icon">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.898 20.624L16.5 21.75l-.398-1.126a3.375 3.375 0 00-2.456-2.456L12.75 18l1.126-.398a3.375 3.375 0 002.456-2.456L16.5 14.25l.398 1.126a3.375 3.375 0 002.456 2.456L20.25 18l-1.126.398a3.375 3.375 0 00-2.456 2.456z" />
                </svg>
            </div>
            <div>
                <h1>AI Style Advisor</h1>
                <p>Upload a photo to get personalized style recommendations.</p>
            </div>
        </header>

        <main>
            <div class="uploader-card">
                <input type="file" id="file-input" accept="image/*">
                <div id="drop-area">
                    <div class="upload-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5" />
                        </svg>
                    </div>
                    <p>Click to upload image</p>
                    <span>or drag and drop</span>
                    <div id="file-name"></div>
                </div>
            </div>

            <button class="analyze-btn" id="analyze-btn" disabled>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/><path d="M5 3v4"/><path d="M19 17v4"/><path d="M3 5h4"/><path d="M17 19h4"/></svg>
                Analyze & Recommend
            </button>
        </main>

        <section class="how-it-works">
            <h2>How It Works</h2>
            <ul class="steps-list">
                <li class="step-item">
                    <div class="step-number">1</div>
                    <div>
                        <h3>Upload Photo</h3>
                        <p>Upload a clear photo for accurate skin tone analysis.</p>
                    </div>
                </li>
                <li class="step-item">
                    <div class="step-number">2</div>
                    <div>
                        <h3>AI Analysis</h3>
                        <p>Our AI analyzes skin tone and style preferences using advanced models.</p>
                    </div>
                </li>
                <li class="step-item">
                    <div class="step-number">3</div>
                    <div>
                        <h3>Get Recommendations</h3>
                        <p>Receive personalized clothing suggestions and color palettes.</p>
                    </div>
                </li>
            </ul>
        </section>
    </div>

    <script>
        const dropArea = document.getElementById('drop-area');
        const fileInput = document.getElementById('file-input');
        const fileNameDisplay = document.getElementById('file-name');
        const analyzeBtn = document.getElementById('analyze-btn');

        // Prevent default drag behaviors
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, preventDefaults, false);
            document.body.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        // Highlight drop area when item is dragged over it
        ['dragenter', 'dragover'].forEach(eventName => {
            dropArea.addEventListener(eventName, () => dropArea.classList.add('dragover'), false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, () => dropArea.classList.remove('dragover'), false);
        });

        // Handle dropped files
        dropArea.addEventListener('drop', handleDrop, false);

        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            handleFiles(files);
        }
        
        // Handle file selection from click
        dropArea.addEventListener('click', () => {
            fileInput.click();
        });

        fileInput.addEventListener('change', function() {
            handleFiles(this.files);
        });

        function handleFiles(files) {
            if (files.length > 0) {
                const file = files[0];
                 if (file.type.startsWith('image/')) {
                    fileNameDisplay.textContent = `Selected file: ${file.name}`;
                    analyzeBtn.disabled = false;
                } else {
                    fileNameDisplay.textContent = 'Please select an image file.';
                    analyzeBtn.disabled = true;
                }
            }
        }
        
        analyzeBtn.addEventListener('click', () => {
            if(!analyzeBtn.disabled) {
                alert('Analysis started! In a real app, this would send the image to the backend.');
                // Here you would add the fetch() call to your backend API
            }
        });

    </script>
</body>
</html>
